
@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Lista de Personas</h3>
            </div>
            <div class="box-body table-responsive">
                <table id="tbl_pacientes" class=" table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Paciente</th>
                            <th>Destino</th>
                            <th>Numero</th>
                            <th>Tecnico</th>
                            <th>Fecha</th>
                            <th>Asistente</th>
                        </tr>
                    </thead>
                    <tbody id="tbl_body_table">
                        @foreach (var salida in Model)
                        {
                            <tr>
                                <td>@salida.Salida_ID</td>
                                <td>@salida.Salida_Nombre</td>
                                <td>@salida.Salida_Destino</td>
                                <td>@salida.Salida_Numero</td>
                                <td>@salida.Salida_Tecnico</td>
                                <td>@salida.Salida_Hora</td>
                                <td>@salida.Salida_Asistente</td>
                                <td>
                                    <button value="Actualizar" title="Actualizar" class="btn btn-primary" onclick="location.href='@Url.Action("Editar","Salida", new { id = salida.Salida_ID},null)'"><i class="glyphicon glyphicon-pencil"></i></button>
                                    <button value="Eliminar" title="Eliminar" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


