@model Proyecto_C.Models.Persona
@{
    ViewBag.Title = "Editar";
}
<section class="content-header">
    <h1 align="center">Editar Persona</h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                @*<div class="box-header">
                    <h3 class="box-title">Editar Persona</h3>
                </div>*@
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_ID)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_ID)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_Nombre)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_Nombre)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_Apellido)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_Apellido)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_Email)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_Email)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_FecNac)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_FecNac)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_Sexo)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_Sexo)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_Celular)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_Celular)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_Username)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_Username)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Persona_Tipo_ID)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Persona_Tipo_ID)
                        </div>
                    }
                    @Html.ActionLink("Atrás", "Listar", "Persona")
                </div>
            </div>
        </div>
    </div>
</section>
    

