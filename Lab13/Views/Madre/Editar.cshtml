@model Proyecto_C.Models.Madre
@{
    ViewBag.Title = "Editar";
}

<section class="content-header">
    <h1 align="center">Editar Madre</h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_ID)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_ID)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_Nombre)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_Nombre)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_Apellido)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_Apellido)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_Edad)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_Edad)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_Sangre)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_Sangre)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_Factor)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_Factor)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_Entrada)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_Entrada)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Madre_Examen_ID)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Madre_Examen_ID)
                        </div>
                    }
                    @Html.ActionLink("Atrás", "Listar", "Madre")
                </div>
            </div>
        </div>
    </div>
</section>

