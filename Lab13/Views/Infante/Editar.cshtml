@model Proyecto_C.Models.Infante
@{
    ViewBag.Title = "Editar";
}
<section class="content-header">
    <h1 align="center">Editar Infante</h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                @*<div class="box-header">
                    <h3 class="box-title">Editar Infante</h3>
                </div>*@
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_ID)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_ID)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_Nombre)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_Nombre)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_Apellido)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_Apellido)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_Lugar)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_Lugar)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_Hora)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_Hora)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_Sexo)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_Sexo)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_Examen_Gen)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_Examen_Gen)
                        </div>
                        <div class="form-group">
                            <label>@Html.LabelFor(model => model.Infante_Examen_Fis)</label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Infante_Examen_Fis)
                        </div>
                    }
                    @Html.ActionLink("Atrás", "Listar", "Infante")
                </div>
            </div>
        </div>
    </div>
</section>
    

